#login
    height: 100% 
    background-image:url('../assets/images/login.jpg')
    background-size: cover
    .container
        font-size: 14px
        position: absolute
        top: 50%
        left: 50%
        width: 300px
        height: 250px
        margin: -125px 0 0 -150px
        padding: 15px
        text-align: center
        border-radius: 4px
        background: #fff
        box-shadow: 0 0 10px rgba(0, 0, 0, .5)
        label,input,button
            display: block
            width: 100%
            margin-bottom: 5px
        label
            font-weight: 700
            margin-top: 10px
            text-align: left
        .el-row
            margin-top:10px
        .el-input
            margin-bottom:5px
    .logo
        margin: 20px auto
        display: block
        height: 20px